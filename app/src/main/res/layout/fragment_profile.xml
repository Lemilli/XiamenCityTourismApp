<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackBG"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"

        android:paddingBottom="70dp">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/muli"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:elevation="5dp"
            android:src="@drawable/profile_pic" />

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:elevation="5dp"
            android:fontFamily="@font/muli"
            android:letterSpacing="0.05"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:text="Username"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/muli"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_username" />

        <TextView
            android:id="@+id/tv_change_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/muli"
            android:paddingVertical="10dp"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:drawableRightCompat="@drawable/profile_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/tv_get_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/muli"
            android:paddingVertical="10dp"
            android:text="Get Help"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:drawableRightCompat="@drawable/help_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_change_pass" />

        <TextView
            android:id="@+id/tv_terms_of_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/muli"
            android:paddingVertical="10dp"
            android:text="Terms of Service"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:drawableRightCompat="@drawable/terms_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/muli"
            android:paddingVertical="10dp"
            android:text="Log Out"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:drawableRightCompat="@drawable/log_out_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <RelativeLayout
            android:id="@+id/profile_delete_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/muli"
                android:paddingVertical="10dp"
                android:text="Delete Account"
                android:textColor="#BBFF0000"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:paddingVertical="10dp"
                android:src="@drawable/trash"
                app:tint="#BBFF0000" />
        </RelativeLayout>


    </LinearLayout>

</ScrollView>